Checks: |
  # Enabled checks
  modernize-*,
  performance-*,
  bugprone-*,
  portability-*,
  cppcoreguidelines-*,
  concurrency-*,
  clang-analyzer-*,
  misc-*,
  # Disabled checks (exceptions)
  -cppcoreguidelines-avoid-magic-numbers,                # Allow magic numbers for brevity/readability
  -cppcoreguidelines-pro-bounds-pointer-arithmetic,      # Allow pointer arithmetic in performance-critical code
  -cppcoreguidelines-owning-memory,                      # Custom memory management is used
  -cppcoreguidelines-avoid-c-arrays,                     # C arrays are used for interop/performance
  -misc-include-cleaner,                                 # Include cleaner is too noisy for this codebase
  -modernize-use-trailing-return-type,                   # Trailing return types not required/preferred
  -misc-const-correctness,                               # Const-correctness is enforced elsewhere
  -modernize-redundant-void-arg,                         # Allow redundant void args for C compatibility
  -cppcoreguidelines-special-member-functions,           # Special member functions are handled manually
  -modernize-deprecated-headers,                         # Deprecated headers are required for legacy support
  -cppcoreguidelines-pro-type-vararg,                    # Varargs are used in some APIs
  -modernize-use-nodiscard,                              # Nodiscard is not enforced project-wide
  -readability-redundant-string-init,                    # Redundant string init is allowed for clarity
  -cppcoreguidelines-explicit-virtual-functions,         # Explicit virtuals not required
  -modernize-use-override,                               # Override not enforced for legacy reasons
  -cppcoreguidelines-init-variables,                     # Variable initialization is handled manually
  -cppcoreguidelines-non-private-member-variables-in-classes, # Non-private members are allowed in some cases
  -misc-non-private-member-variables-in-classes,         # Same as above
  -clang-analyzer-optin.cplusplus.VirtualCall,           # Virtual call warnings are too noisy
  -performance-avoid-endl,                               # Use of endl is intentional in some places
  -cppcoreguidelines-pro-type-reinterpret-cast,           # reinterpret_cast is required for low-level code
  -cppcoreguidelines-pro-type-const-cast,                 # const_cast is required for low-level code

WarningsAsErrors: false

HeaderFilterRegex: 'src/.*'

AnalyzeTemporaryDtors: true
FormatStyle: none

CheckOptions:
# Read/write more consistent with modern C++
- key: modernize-use-nullptr.NullMacros
  value: 'NULL,nullptr_t'
- key: modernize-use-auto.MinTypeNameLength
  value: '5'

# performance
- key: performance-for-range-copy.WarnOnAllAutoCopies
  value: true

# cppcoreguidelines
- key: cppcoreguidelines-non-private-member-variables-in-classes.IgnoreClassesWithAllPrivateMembers
  value: true

# Network / concurrency: avoid dangerous locks
- key: concurrency-mt-unsafe.StrictMode
  value: true

# Clang analyzer (pointers, memory leaks, etc.)
- key: clang-analyzer-optin.performance.Padding
  value: true

# Limit noise on ECS structures
- key: readability-identifier-naming.IgnoreMainLikeFunctions
  value: true
